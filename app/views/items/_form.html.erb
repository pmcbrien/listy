<% semantic_form_for [@store, @item] do |f| %>
  <%= f.inputs do %>
    <% if @store.aisles.length > 0 %>
      <%= f.input :aisle, :collection => @store.aisles %>
    <% end %>
    <%= f.input :name %>
    <%= f.input :number_needed %>
    <%= f.input :notes %>
    <%= f.input :popularity %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
