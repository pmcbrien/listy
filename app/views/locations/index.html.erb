  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.sort %></td>
    <td><%= location.store.name %></td>
    <td><%= link_to 'edit', edit_store_location_path(@store.id, location) %></td>
    <td><%= link_to 'delete', store_location_path(@store.id, location), :confirm => 'are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

