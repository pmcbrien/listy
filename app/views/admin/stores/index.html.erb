<h1>Listing stores</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= store.name %></td>
    <td><%= store.user_id %></td>
    <td><%= link_to 'show', admin_store_path(store) %></td>
    <td><%= link_to 'edit', edit_admin_store_path(store) %></td>
    <td><%= link_to 'destroy', admin_store_path(store), :confirm => 'are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

